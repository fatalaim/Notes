<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newnotepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/pdfname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Note Blotter"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="55sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/newnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pdfname"
        android:layout_below="@+id/pdfname"
        android:layout_marginTop="78dp"
        android:onClick="newNote"
        android:text="@string/newnote" />

    <Button
        android:id="@+id/importPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/journal"
        android:layout_alignRight="@+id/pdfname"
        android:text="@string/addscribble"
        android:onClick="newHandnote" />

    <Button
        android:id="@+id/journal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newnote"
        android:layout_below="@+id/newnote"
        android:layout_marginTop="73dp"
        android:onClick="journalView"
        android:text="@string/journals"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/journal"
        android:layout_alignLeft="@+id/importPdf"
        android:text="@string/loadscribble" 
        android:onClick="loadScribble"/>

</RelativeLayout>